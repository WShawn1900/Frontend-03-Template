    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            // node 运行参数
            "runtimeArgs": [
                "--require", "@babel/register"
            ],
            "sourceMaps": true,
            "program": "${workspaceFolder}/node_modules/.bin/mocha"
        }
    ]
}